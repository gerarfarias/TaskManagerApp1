@model TaskManagerApp.Models.TaskItem

<h2>Delete Task</h2>

<p>Are you sure you want to delete this task?</p>

<!-- Display task info so user knows what they're deleting -->
<div class="mb-3">
    <strong>Title:</strong> @Model.Title <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Due Date:</strong> @Model.DueDate.ToShortDateString() <br />
    <strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Pending")
</div>

<!-- Form will POST to TaskController.DeleteConfirmed -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field to carry Id -->
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
