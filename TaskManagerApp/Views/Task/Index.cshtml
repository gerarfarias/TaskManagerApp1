@model IEnumerable<TaskManagerApp.Models.TaskItem>

<h2>Task List</h2>
<a asp.action="Create" class="btn btn-primary">Add New Task</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
                <td>
                    <a asp.action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>

                    <a asp.action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Delete</a>

                </td>
            </tr>
}
</table>
